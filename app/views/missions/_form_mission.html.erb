<div id="form-mission-content">
  <%= simple_form_for (mission) do |f|%>
    <%= f.input :title%>

    <%= f.association :company, label_method: :name, value_method: :id, include_blank: false%>
    <%= f.input :status, collection: Mission::STATUS%>
    <%= f.association :associate, collection: team_jouve, label_method: :full_name, value_method: :id %>
    <%= f.association :consultant, collection: team_jouve, label_method: :full_name, value_method: :id %>
    <%= f.association :assistant, collection: team_jouve, label_method: :full_name, value_method: :id  %>

    <div id="form-mission-clients">
      <div class="client-field">
      <%= f.association :users, collection: not_jouve, label_method: :email, value_method: :id, multiple: true%>

      </div>
      <a href="#">Add a client</a>
    </div>

    <div class="text-center">
      <%= f.button :submit, class:'btn navbar-wagon-button'%>
    </div>
  <%end%>
</div>
